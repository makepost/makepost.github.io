
extends layout

block append vars
  - bodyclass = 'Body--articleDetail'

block prepend title
  | #{ page.title + ' - '}

block header
  include author
  h1.Title= page.title
  p.Author
    | #{ 'Written by ' }
    mixin author(page.metadata.author)

block content
  article.Article
    section.Article-content!= typogr(page.html).typogrify()

block prepend footer
  nav.Nav
    a(href=contents.index.url) &laquo; Full blog
